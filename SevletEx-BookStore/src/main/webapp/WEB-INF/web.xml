<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>ServletEx BookStore</display-name>
 
  <servlet>
  <servlet-name>register</servlet-name>
  <servlet-class>com.india.servlets.RegisterServlet</servlet-class>
  </servlet>
 
  <servlet-mapping>
  <servlet-name>register</servlet-name>
  <url-pattern>/register.jlc</url-pattern>
  </servlet-mapping>

  <servlet>
  <servlet-name>login</servlet-name>
  <servlet-class>com.india.servlets.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>login</servlet-name>
  <url-pattern>/login.jlc</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>forgot</servlet-name>
  <servlet-class>com.india.servlets.ForgotServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>forgot</servlet-name>
  <url-pattern>/forgot.jlc</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
  <welcome-file>login.html</welcome-file>
  </welcome-file-list>
</web-app>